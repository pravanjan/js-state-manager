{
    "compilerOptions": {
      "sourceMap": true,
      "target": "esnext",
      "module": "esnext",
      "removeComments": false,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "src/**/*.ts", "src/app.tsx",
    ],
    "exclude": [
      "node_modules"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  }